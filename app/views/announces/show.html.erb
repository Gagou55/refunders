<div id="wraper">
  <div id="top">
    <div class="container">
      <div class="row">
        <div class="col-md-2">
          <%= image_tag @announce.company.logo, :class => 'img-rounded img-show' %> <br>
        </div>
        <div class="col-md-6">
          <h2 class="title-announce"><%= @announce.title %></h2>
          <p><%= @announce.company.sector.name %></p>
           <p><%= @announce.company.summary.truncate(200) %></p>

        </div>
        <div class="col-md-2 col-md-offset-1 mt-40">
          <p><%= @announce.company.name %></p>
          <p><%= "#{@announce.number_of_share} #{@announce.kind.name} vendues" %></p>
          <p><b><%= "Prix total: #{@announce.price}â‚¬" %></b></p>
          <br>
        </div>
      </div>
    </div>
  </div>
  <div class="content">
    <div class="container">
      <div class="col-md-10">
        <div role="tabpanel">

          <!-- Nav tabs -->
          <ul class="nav nav-tabs" id="dashboard_products" role="tablist">
            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab"><%= t ('announces.show.general_information') %></a></li>
            <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab"><%= t '.business_model' %></a></li>
            <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab"><%= t '.development' %></a></li>
            <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab"><%= t '.vision' %></a></li>
            <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab"><%= t '.team' %></a></li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-md-9">
          <!-- Tab panes -->
          <div class="tab-content mt-10">
            <div role="tabpanel" class="tab-pane active" id="home"><%= markdown(@announce.company.general_information) %></div>
            <div role="tabpanel" class="tab-pane" id="profile"><%= @announce.company.business_model %></div>
            <div role="tabpanel" class="tab-pane" id="messages"><%= @announce.company.development %></div>
            <div role="tabpanel" class="tab-pane" id="settings"><%= @announce.company.vision %></div>
            <div role="tabpanel" class="tab-pane" id="settings"><%= @announce.company.team %></div>
          </div>
        </div>
      <div class="col-md-1 col-md-offset-1 mt-20">
        <% if user_signed_in? && !@announce.has_been_purchased? %>
          <%= form_for @purchase, url: announce_purchases_path(@announce), method: :post do |f| %>
            <%= f.hidden_field :announce_id, value: @announce.id %> <br>
            <%= f.submit t('announces.purchase') , class: "btn btn-primary btn-acide" %>
          <% end %>
        <% elsif user_signed_in? && @announce.has_been_purchased? %>
          <%= link_to t('announces.root'), root_path, class: "btn btn-primary btn-acide" %>
        <% else %>
          <%= link_to t('announces.register'), new_user_registration_path, class: "btn btn-primary btn-acide" %>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to t('announces.back'), root_path, class:"ml-20" %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h2><%= t('announces.comments')%></h2>
      <%= form_tag(announce_messages_path(@announce), method: :post, :id => 'comments_form') do %>
        <%= image_tag current_user.picture, class: "img-avatar current-user-avatar" %>
        <br>
        <div class="name-on-a-comment">
          <%= "#{current_user.first_name} #{current_user.last_name}" %>
        </div>

        <br>
        <%= text_field_tag(:subject, params[:subject],{:class => "form-control", :placeholder => "Sujet"}) %>
        <%= text_area_tag(:body, params[:body], {:class => "form-control", :placeholder => "Message"}) %>
        <br>
        <%= submit_tag t('announces.send'), class: 'btn btn-acide' %>
      <% end %>
      <div class="clear"></div>
      <div class="comment-box">
        <% @announce.mailbox.conversations.first(5).each do |conversation| %>
          <div>
            <% receipts = conversation.receipts_for @announce %>
            <% receipts.each do |receipt| %>
            <div class="row">
              <div class="col-xs-1 text-center">
                <% if receipt.notification.sender.picture.present? %>
                  <%= image_tag receipt.notification.sender.picture, width: 25, height:25, class: "img-avatar img-comments" %>
                <% else  %>
                  <%= image_tag "Business-Businessman.ico", width: 25, height:25, class: "img-avatar img-comments" %>
                <% end %>
              </div>
              <div class="col-xs-4 name-on-a-comment">
                <%= "#{receipt.notification.sender.first_name} #{receipt.notification.sender.last_name}" %>
              </div>
              <br>
              <div class="col-xs-4 subject-of-a-comment">
                <strong><%= "#{receipt.message.subject}" %></strong>
              </div>
              <br>
              <div class="col-xs-1"></div>
              <div class="col-xs-4 body-of-a-comment">
                <%= "#{receipt.message.body}" %>
                <br><br>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

