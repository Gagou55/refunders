<div class="container">
  <div class="row">
    <h1><%= @announce.title %></h1>
    <p><%= @announce.company.name %></p>
    <p><%= "#{@announce.number_of_share} #{@announce.kind.name}" %></p>
    <p><%= "#{@announce.price}â‚¬" %></p>

    <%= link_to t('announces.back'), root_path %>
  </div>

  <% if user_signed_in? && !@announce.has_been_purchased? %>
    <%= form_for @purchase, url: announce_purchases_path(@announce), method: :post do |f| %>
      <%= f.hidden_field :announce_id, value: @announce.id %> <br>
      <%= f.submit t('announces.purchase') , class: "btn btn-primary btn-search" %>
    <% end %>
  <% elsif user_signed_in? && @announce.has_been_purchased? %>
    <%= link_to t('announces.root'), root_path, class: "btn btn-primary btn-search" %>
  <% else %>
    <%= link_to t('announces.register'), new_user_registration_path, class: "btn btn-primary btn-search" %>
  <% end %>
</div>

<div class="container">
  <div class="row">
  <h1 class = "text-center"><%= t '.title', name: @announce.company.name %></h1>
  <%= image_tag @announce.company.logo %> <br>
  <%= @announce.company.summary %>

  <h2 id="general_information_company" class = "text-center"><%= t ('announces.show.general_information') %></h2>
  <%= @announce.company.general_information %>

  <h2 id="business_model_company" class = "text-center"><%= t '.business_model' %></h2>
  <%= @announce.company.business_model %>

  <h2 id="development_company" class = "text-center"><%= t '.development' %></h2>
  <%= @announce.company.development %>

  <h2 id="vision_company" class = "text-center"><%= t '.vision' %></h2>
  <%= @announce.company.vision %>

  <h2 id="team_company" class = "text-center"><%= t '.team' %></h2>
  <%= @announce.company.team %>

  <h2>Messages</h2>

  <%= form_tag(announce_messages_path(@announce), method: :post) do %>
    <%= text_field_tag :subject %>
    <%= text_area_tag :body %>
    <%= submit_tag 'Send email' %>
  <% end %>

  <% @announce.mailbox.conversations.each do |conversation| %>
    <div>
      <%= conversation.inspect %>
    </div>
  <% end %>
  </div>
</div>