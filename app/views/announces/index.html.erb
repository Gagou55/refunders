<div class="nos_annonces back_announce search-results-page">
  <div class="container index-announces">
    <div class="row">
      <h1 class="text-center search-title"><%= t '.research', count: @announces.size %></h1>
      <ul class="surveys list text-left">
        <% @announces.each do |announce| %>
          <li class="survey-item">
            <span class='survey-image' style="background: url(<%= image_url announce.company.logo %>); background-size: 100%;">

            </span>

            <span class="survey-country list-only">
              <%= announce.company.sector.name %>
            </span>

            <span class="survey-name">
              <%= announce.title %>
            </span>

            <span class="survey-country grid-only">
              <%= announce.company.sector.name %>
            </span>

            <div class="pull-right">

<!--                   <span class="survey-progress">
                <span class="survey-progress-bg">
                  <span class="survey-progress-fg" style="width: 88%;"></span>
                </span> -->

                <span class="survey-progress-labels">
                  <span class="survey-progress-label">
                    <%= "#{announce.number_of_share} #{announce.kind.name}" %>
                  </span>

                  <span class="survey-completes">
                    <%= "#{announce.price} â‚¬" %>
                  </span>
                </span>
              </span>

               <span class="survey-end-date ended">
                <%= "#{announce.created_at.strftime("%d %b. %Y")}" %>
              </span>
              <span class="survey-stage">
                  <% if user_signed_in? %>
                    <%= link_to "Voir l'annonce", announce, class: "btn btn-acide float-right " %>
                  <% else %>
                    <%= link_to "Voir l'annonce", new_user_session_path, class: "btn btn-acide float-right" %>
                  <% end %>
              </span>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
