<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">

           <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Identification</h3>
            </div>
            <div class="panel-body">
                                <div id="social-connect" class="text-center">
                   <div id="social-button">
                      <%= link_to "Connect with Facebook", user_omniauth_authorize_path(:facebook), class: 'fa fa-facebook btn btn-facebook' %>

                       <%= link_to "Connect with Linkedin", user_omniauth_authorize_path(:facebook), class: 'fa fa-linkedin btn btn-linkedin' %>
                   </div>
                </div>
                <hr/>
                <p class="text-left">
                    <b>Ou connectez-vous avec vos identifiants</b>
                </p>
        </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <%= f.button :submit, t(".sign_in", default: "Sign in"), class: "btn btn-primary" %>
      <% end %>
<%= link_to "Connect with Facebook", user_omniauth_authorize_path(:facebook) %>


      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>



