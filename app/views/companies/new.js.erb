var select = $('select').first()

$('#company_name').on('keyup', function(){
  that = $(this)
  if ($('#newCompany').length == 0) {
    select.append($("<option selected='true' id='newCompany'>").html(that.val()))
  } else {
    $('#newCompany').html(that.val())
  }

  if ($(this).val() == "") {
    $('#newCompany').remove()
  }
})

