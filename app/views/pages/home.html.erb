    <div class="nos_annonces back_announce">
      <div class="container">
        <div class="row">
          <h4><%= t('pages.some_announces') %></h4>
          <% @announces.each do |announce| %>
              <div class= "col-xs-12">
                <div class="white_card">
                  <div class="row" id="announce-home">
                    <div class="col-xs-2">
                      <%= link_to announce_path(announce[:id]) do %>
                        <%= image_tag announce.company.logo , width: 75, height:75, :class => "center_img float-left"%>
                      <% end %>
                    </div>
                    <div class="col-xs-3">
                      <div class="title"><%= announce.title %></div>
                      <p class="number_share float-left "><%= "Nombre de Parts: #{announce.number_of_share}" %></p>
                    </div>
                    <div class="col-xs-3">
                      <p class="title"><%= "Nombre de Parts: #{announce.number_of_share}" %></p>
                      <div class="number_share float-left"><%= "Prix de vente: #{announce.price} â‚¬" %></div>
                    </div>

                    <div class="col-xs-4">
                      <% if user_signed_in? %>
                        <%= link_to "Voir l'annonce", announce, class: "btn btn-primary float-right mr-20 mt-30" %>
                      <% else %>
                        <%= link_to "Voir l'annonce", new_user_session_path, class: "btn btn-primary float-right mr-20 mt-30" %>
                      <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <h4>
            <%= link_to (t('pages.see_more') + " <i class='fa fa-long-arrow-right'></i>").html_safe, announces_path, id:'see_more' %>
          </h4>
        </div>
      </div>
    </div>

    <div class="form-inline pt-70 search-bar-back">
      <%= form_tag announces_path, :id => 'search_welcome', method: :get do %>
      <%= select_tag(:search_sector, options_from_collection_for_select(Sector.all, "id", "name", params[:search_sector]), {:class => "form-control"}) %>
      <%= select_tag(:search_kind, options_from_collection_for_select(Kind.all, "id", "name", params[:search_kind]), {:class => "form-control"}) %>
      <%= text_field_tag(:min_price, params[:min_price], {:class => "form-control", :placeholder => "Prix Min"}) %>
      <%= text_field_tag(:max_price, params[:max_price], {:class => "form-control", :placeholder => "Prix Max"}) %>

      <%= submit_tag "Search" , class: "btn btn-acide btn-search" %>
      <% end %>
    </div>


