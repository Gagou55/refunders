<div id="banner" class="text-center">
  <div class="back-color">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
          <h2><%= t('pages.catch_sentence') %></h2>
        </div>
