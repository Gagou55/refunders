  <div class="back-color">
<div class="container pt-70">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Identification</h3>
        </div>
        <div class="panel-body p-20">
          <div id="social-connect" class="text-center">
            <div id="social-button">
              <%= link_to t('devise.sessions.facebook'), user_omniauth_authorize_path(:facebook), class: 'fa fa-facebook btn btn-facebook' %>
              <%= link_to t('devise.sessions.linkedin'), user_omniauth_authorize_path(:facebook), class: 'fa fa-linkedin btn btn-linkedin' %>
            </div>
          </div>
          <hr/>
           <p class="text-left">
            <b><%= t('devise.sessions.connect_with_id') %></b>
           </p>
        </div>
        <div class="p-20">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, t(".sign_in", default: "Sign in"), class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="p-20">
         <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>









